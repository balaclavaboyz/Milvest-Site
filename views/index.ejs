<%- include('./partials/header') %>
<%- include('./partials/nav') %>

<header class="page-header" style="padding-top: 50px;">
  <div class="container">
    <div class="row text-center align-items-center">
      <div class="col-lg-6">
        <h2 class="display-2"><strong>Moda Feminina Atacado Bom Retiro</strong></h2>
        <p style="font-size: 1.5rem;">Criamos , Produzimos e Vendemos em Atacado</p>
        <a href="/vesti" class="btn btn-outline-primary btn-lg ">Catálogo</a>
      </div>
      <div class="col-lg-6">
        <div id="qwe" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="carousel-3/1.jpg" class="d-block w-100" alt="img">
            </div>
            <div class="carousel-item">
              <img src="carousel-3/2.jpg" class="d-block w-100" alt="img">
            </div>
            <div class="carousel-item">
              <img src="carousel-3/3.jpg" class="d-block w-100" alt="img">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#qwe" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#qwe" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

<section class="galeria" style="padding-top: 20px;">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <!-- meio -->
      <div class="col-lg-6 d-block d-md-block d-lg-none">
        <h2>Coleções Outono / Inverno 2021</h2>
        <a href="/vesti" class="btn btn-outline-primary btn-lg ">Catálogo</a>
      </div>
      <div class="col-lg-6">
        <div id="asd" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="galeria/galeria1.jpg" class="d-block w-100" alt="img">
            </div>
            <div class="carousel-item">
              <img src="galeria/galeria2.jpg" class="d-block w-100" alt="img">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#asd" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#asd" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <!-- fim -->
      <div class="col-lg-6 text-center d-none d-lg-block">
        <h2>Coleções Outono / Inverno 2021</h2>
        <a href="/vesti" class="btn btn-outline-primary btn-lg ">Catálogo</a>
      </div>
    </div>
  </div>
  
</section>
